<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:fitsSystemWindows="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp">

        <EditText
            android:id="@+id/editTeacherName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Teacher Name"
            android:inputType="textPersonName"
            android:layout_marginBottom="8dp"/> <!-- Added margin -->

        <EditText
            android:id="@+id/editTeacherBio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Teacher Bio"
            android:inputType="textMultiLine"
            android:layout_marginBottom="16dp"/> <!-- Added margin -->

        <EditText
            android:id="@+id/editTeacherImageUrl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Image URL"
            android:inputType="textUri"
            android:layout_marginBottom="16dp"/> <!-- Added margin -->

        <Button
            android:id="@+id/btnAddTeacher"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Save" />
    </LinearLayout>
</LinearLayout>